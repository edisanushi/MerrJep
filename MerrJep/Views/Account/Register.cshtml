<script>
	$("#submit-register").click(async function () {
		var emri = $("#Emri").val();
		var mbiemri = $("#Mbiemri").val();
		var email = $("#Email").val();
		var fjalekalimi = $("#psw-input").val();
		var konfirmoFjalekalim = $("#KonfirmoFjalekalim").val();

		var obj = {
			Emri: emri,
			Mbiemri: mbiemri,
			Email: email,
			Password: fjalekalimi,
			KonfirmoFjalekalim: konfirmoFjalekalim
		}
		const button = document.getElementById('submit-register');
		SubmitForm(obj);
	});

	function SubmitForm(obj) {
		$.ajax({
			url: "/Account/Register",
			method: "POST",
			data: obj,
			success: function (data) {
				if (data == "true") {
					window.location = "/Home/Index";
				}
				else {
					const button = document.getElementById('submit-register');
					$.each(data.Errors, function (key, value) {
						console.log(key + value);
						if (value != null) {
							$("#Err_" + key).html(value[value.length - 1].ErrorMessage);
						}
					});
				}
			},
			error: function (err) {
				console.log(err);
			}
		});
	}

	$("input").keyup(function () {
		var $errorDiv = $("#Err_" + this.id);
		if ($errorDiv.html() != "") {
			$errorDiv.html("");
		}
	});


	$('#Emri').bind('keydown', function (event) {
		checkRegularExpression("^[a-zA-Z]");
	});

	$('#Mbiemri').bind('keydown', function (event) {
		checkRegularExpression("^[a-zA-Z]");
	});

	$('#UserName').bind('keydown', function (event) {
		checkRegularExpression("^[a-zA-Z0-9]");
	});

	$('#Email').bind('keydown', function (event) {
		checkRegularExpression("^[a-zA-Z0-9.@@_-]");
	});

	$('#Nr_Telefoni').bind('keydown', function (event) {
		checkRegularExpression("^[0-9+\B]");
	});


	$("#Nr_Telefoni").keyup(function () {
		var str = $('#Nr_Telefoni').val();
		const input = document.getElementById('Nr_Telefoni');
		var limit = 13;
		if (/^0/.test(str)) {
			limit = 10;
			input.setAttribute("maxlength", limit);
		}
		else {
			limit = 13;
			input.setAttribute("maxlength", limit);
		}
	});



	function checkRegularExpression(regularExpression) {
		console.log("ok");
		var regex = new RegExp(regularExpression);
		var key = event.key;
		if (!regex.test(key)) {
			event.preventDefault();
			return false;
		}
	}
</script>